{% from 'bootstrap5/utils.html' import render_messages %}
<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
            {{ bootstrap.load_css() }}
            <script defer src="https://kit.fontawesome.com/bf1381b04a.js" crossorigin="anonymous"></script>
        <title>secunit dns tools project</title>
        {% endblock %}
